# ============================================
# Demand Letter Generator - Environment Variables
# ============================================
# Copy this file to .env and fill in actual values
# NEVER commit .env files to version control!
# ============================================

# ============================================
# Node Environment
# ============================================
NODE_ENV=development

# ============================================
# API Service Configuration
# ============================================
PORT=3000
API_BASE_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string (used by both Node and Python services)
# For local development with Docker: postgresql://postgres:postgres@localhost:5435/demand_letters
# For production: Use AWS RDS connection string from Secrets Manager
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/demand_letters

# Individual database components (optional, can parse from DATABASE_URL)
DB_HOST=localhost
DB_PORT=5435
DB_NAME=demand_letters
DB_USER=postgres
DB_PASSWORD=postgres

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_TIMEOUT=30000

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS S3 Document Storage
S3_BUCKET_DOCUMENTS=demand-letters-documents-dev
S3_BUCKET_LAMBDA=demand-letters-lambda-deployments-dev
S3_SIGNED_URL_EXPIRES=3600

# AWS Bedrock (Claude AI)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
BEDROCK_REGION=us-east-1

# AWS Secrets Manager (production)
DATABASE_SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:demand-letters-dev/database/master
JWT_SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:demand-letters-dev/jwt/secret

# AWS Lambda Functions
LAMBDA_API_FUNCTION_NAME=demand-letters-dev-api
LAMBDA_AI_FUNCTION_NAME=demand-letters-dev-ai-processor

# AWS DynamoDB (for WebSocket connections - P1)
CONNECTIONS_TABLE_NAME=demand-letters-dev-websocket-connections

# AWS CloudWatch Logs
LOG_GROUP_API=/aws/lambda/demand-letters-dev-api
LOG_GROUP_AI=/aws/lambda/demand-letters-dev-ai-processor

# Terraform Outputs (populated after infrastructure deployment)
# VPC_ID=vpc-xxxxxxxxxxxxx
# PRIVATE_SUBNET_IDS=subnet-xxxxxx,subnet-yyyyyy
# PUBLIC_SUBNET_IDS=subnet-aaaaaa,subnet-bbbbbb
# RDS_ENDPOINT=demand-letters-dev-postgres.xxxxxx.us-east-1.rds.amazonaws.com:5432
# API_GATEWAY_URL=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/dev
# WEBSOCKET_API_URL=wss://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/dev

# ============================================
# Email Service (TBD - PR-005)
# ============================================
# Option 1: AWS SES
# EMAIL_PROVIDER=ses
# SES_FROM_EMAIL=noreply@yourdomain.com
# SES_REGION=us-east-1

# Option 2: SendGrid
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Redis Configuration (for rate limiting)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Monitoring & Error Tracking
# ============================================
# Sentry
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# CloudWatch
LOG_LEVEL=info

# ============================================
# Frontend Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_BASE_URL=ws://localhost:3001
VITE_SENTRY_DSN=your_frontend_sentry_dsn

# ============================================
# Collaboration Service (P1 Feature)
# ============================================
COLLABORATION_PORT=3001
COLLABORATION_WS_PATH=/ws

# ============================================
# Security & Rate Limiting
# ============================================
# ============================================
# CORS Configuration
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Password (if auth enabled on ElastiCache)
REDIS_PASSWORD=

# ============================================
# Python AI Processor
# ============================================
PYTHON_LOG_LEVEL=INFO

# ============================================
# Development Tools
# ============================================
# Enable debug logging
DEBUG=false

# Mock external services for testing
MOCK_AWS_SERVICES=false
MOCK_EMAIL_SERVICE=true
