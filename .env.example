# ============================================
# Demand Letter Generator - Environment Variables
# ============================================
# Copy this file to .env and fill in actual values
# NEVER commit .env files to version control!
# ============================================

# ============================================
# Node Environment
# ============================================
NODE_ENV=development

# ============================================
# API Service Configuration
# ============================================
PORT=3000
API_BASE_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/demand_letters_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=demand_letters_dev
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS S3 Document Storage
S3_BUCKET_NAME=demand-letters-documents-dev
S3_SIGNED_URL_EXPIRES=3600

# AWS Bedrock (Claude AI)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
BEDROCK_REGION=us-east-1

# ============================================
# Email Service (TBD - PR-005)
# ============================================
# Option 1: AWS SES
# EMAIL_PROVIDER=ses
# SES_FROM_EMAIL=noreply@yourdomain.com
# SES_REGION=us-east-1

# Option 2: SendGrid
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Redis Configuration (for rate limiting)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Monitoring & Error Tracking
# ============================================
# Sentry
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# CloudWatch
LOG_LEVEL=info

# ============================================
# Frontend Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_BASE_URL=ws://localhost:3001
VITE_SENTRY_DSN=your_frontend_sentry_dsn

# ============================================
# Collaboration Service (P1 Feature)
# ============================================
COLLABORATION_PORT=3001
COLLABORATION_WS_PATH=/ws

# ============================================
# Security & Rate Limiting
# ============================================
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Python AI Processor
# ============================================
PYTHON_LOG_LEVEL=INFO

# ============================================
# Development Tools
# ============================================
# Enable debug logging
DEBUG=false

# Mock external services for testing
MOCK_AWS_SERVICES=false
MOCK_EMAIL_SERVICE=true
