{
  "name": "demand-letter-generator",
  "version": "1.0.0",
  "description": "Steno Demand Letter Generator - AI-powered legal document generation",
  "private": true,
  "workspaces": [
    "services/api",
    "services/collaboration",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "api:dev": "npm run dev --workspace=services/api",
    "frontend:dev": "npm run dev --workspace=frontend",
    "collaboration:dev": "npm run dev --workspace=services/collaboration"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/demand-letter-generator.git"
  },
  "keywords": [
    "legal-tech",
    "demand-letter",
    "ai-generation",
    "document-automation"
  ],
  "author": "",
  "license": "PROPRIETARY"
}
