{
  "name": "demand-letter-generator",
  "version": "1.0.0",
  "description": "Steno Demand Letter Generator - AI-powered legal document generation",
  "private": true,
  "workspaces": [
    "services/api",
    "services/collaboration",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "api:dev": "npm run dev --workspace=services/api",
    "frontend:dev": "npm run dev --workspace=frontend",
    "collaboration:dev": "npm run dev --workspace=services/collaboration",
    "build:api": "bash scripts/build-api.sh",
    "build:ai": "bash scripts/build-ai.sh",
    "build:collaboration": "bash scripts/build-collaboration.sh",
    "build:frontend": "bash scripts/build-frontend.sh",
    "build:all": "npm run build:api && npm run build:ai && npm run build:collaboration && npm run build:frontend",
    "deploy:lambda": "bash scripts/deploy-lambda.sh",
    "deploy:frontend": "bash scripts/deploy-frontend.sh",
    "deploy:dev": "npm run build:all && bash scripts/run-migrations.sh dev && npm run deploy:lambda api dev deploy/api-lambda.zip && npm run deploy:lambda ai dev deploy/ai-lambda.zip && npm run deploy:lambda collaboration dev deploy/collaboration-lambda.zip && npm run deploy:frontend dev",
    "deploy:prod": "npm run build:all && bash scripts/run-migrations.sh prod && npm run deploy:lambda api prod deploy/api-lambda.zip && npm run deploy:lambda ai prod deploy/ai-lambda.zip && npm run deploy:lambda collaboration prod deploy/collaboration-lambda.zip && npm run deploy:frontend prod",
    "migrate": "bash scripts/run-migrations.sh",
    "smoke-test": "bash scripts/smoke-test.sh",
    "rollback": "bash scripts/rollback.sh",
    "infrastructure:deploy": "bash scripts/deploy-infrastructure.sh",
    "infrastructure:destroy": "bash scripts/destroy-infrastructure.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/demand-letter-generator.git"
  },
  "keywords": [
    "legal-tech",
    "demand-letter",
    "ai-generation",
    "document-automation"
  ],
  "author": "",
  "license": "PROPRIETARY"
}
