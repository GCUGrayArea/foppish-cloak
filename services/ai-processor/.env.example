# AI Processor Service - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/demand_letters_dev

# AWS Configuration
AWS_REGION=us-east-1
# AWS credentials are typically loaded from AWS CLI configuration or IAM role
# If needed, you can specify:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MAX_TOKENS=4096

# Temperature settings (0.0 = deterministic, 1.0 = creative)
BEDROCK_TEMPERATURE_EXTRACTION=0.0
BEDROCK_TEMPERATURE_GENERATION=0.7

# Retry Configuration
BEDROCK_MAX_RETRIES=3
BEDROCK_RETRY_BASE_DELAY=1.0
BEDROCK_RETRY_MAX_DELAY=60.0

# Cost Tracking (Claude 3.5 Sonnet pricing as of 2024)
# Input: $3.00 per million tokens = $0.000003 per token
# Output: $15.00 per million tokens = $0.000015 per token
BEDROCK_COST_PER_INPUT_TOKEN=0.000003
BEDROCK_COST_PER_OUTPUT_TOKEN=0.000015

# Logging Configuration
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development

# Integration Testing
# Set to 'true' to skip integration tests that require AWS credentials
SKIP_INTEGRATION_TESTS=false
