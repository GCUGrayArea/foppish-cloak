# ============================================
# API Service Environment Variables
# ============================================
# Copy this file to .env in this directory
# For local development and testing
# ============================================

# ============================================
# Node Environment
# ============================================
NODE_ENV=development

# ============================================
# API Service Configuration
# ============================================
PORT=3000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/demand_letters

# ============================================
# Authentication & Security
# ============================================
# IMPORTANT: Generate random secrets for production
# For local testing, these defaults work
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_chars
REFRESH_TOKEN_SECRET=dev_refresh_secret_change_in_production_min_32_chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# ============================================
# Document Storage Configuration
# ============================================
# Use 'local' for development, 's3' for production
STORAGE_MODE=local
LOCAL_STORAGE_PATH=./uploads

# AWS S3 (only needed if STORAGE_MODE=s3)
# S3_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ============================================
# Email Configuration (optional for testing)
# ============================================
MOCK_EMAIL_SERVICE=true

# ============================================
# Security & CORS
# ============================================
CORS_ORIGIN=http://localhost:5173
